<div class="card">
  <img class="card-img-top" src="{{this.posterUrl}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{item.title}}</h5>
    <p class="card-text">Год релиза: {{this.releaseYear}}</p>
    <a href="movie/{{item.id}}" class="btn btn-primary">Open</a>
  </div>
</div>